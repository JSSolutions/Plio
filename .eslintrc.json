{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-trailing-spaces": "off",
    "no-unresolved": "off",
    "no-underscore-dangle": "off",
    "jsx-a11y/rule-name": "off",
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": ["error", 2],
    "import/no-unresolved": [2, { "ignore": ["meteor"] }]
  },
  "settings": {
    "import/resolver": {
      "meteor": {
        "extensions": [
          ".js",
          ".jsx",
          ".es6",
          ".coffee"
        ],
        "paths": [
          "/usr/local/share/global_modules"
        ],
        "moduleDirectory": [
          "node_modules",
          "bower_components",
          "project/src"
        ]
      }
    }
  }
}